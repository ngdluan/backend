generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String   @id @default(uuid())
  userName String?  @unique
  email    String   @unique
  hash     String
  details  Detail[]
}

model Detail {
  id     String  @id @default(uuid())
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
  key    String?
  value  String?
}

model Product {
  id          String  @id @default(uuid())
  name        String
  description String?
  Tags        Tag[]
  Attr        Attr[]
  Price       Price?  @relation(fields: [priceId], references: [id])
  priceId     String?
}

model Tag {
  id       String    @id @default(uuid())
  key      String?
  value    String?
  Products Product[]
}

model Attr {
  id       String    @id @default(uuid())
  key      String?
  value    String?
  Products Product[]
  Price    Price[]
}

model Price {
  id       String    @id @default(uuid())
  key      String?
  value    String?
  Products Product[]
  attrId   String?
  Attr     Attr?     @relation(fields: [attrId], references: [id])
}
